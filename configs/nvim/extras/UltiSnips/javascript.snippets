# endsnippet

snippet str "json stringify"
JSON.stringify(${1:obj})
endsnippet

snippet newp "new promise"
new Promise((resolve, reject) => {
  ${1:content}
});
endsnippet

snippet f "function frontend" i
function (${1})
endsnippet

snippet hl "hapi logger"
hapiLogger.log('${1:error}', '${2}', ${3});
endsnippet
