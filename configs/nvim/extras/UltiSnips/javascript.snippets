snippet cc "console log exception" i
.catch(e => { console.log(e); throw e; })
endsnippet

snippet ct "console log then" i
.then(a => { console.log(a); return a; })
endsnippet

snippet cs "console log json stringify"
console.log(JSON.stringify(${1:obj}));
endsnippet

