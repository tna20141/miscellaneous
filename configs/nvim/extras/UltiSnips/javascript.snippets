snippet ins "util inspect"
console.log(require('util').inspect(${1:object}, false, null));
endsnippet

snippet cl "console log"
console.log(${1:data});
endsnippet

# snippet clt "console log with time"
# console.log((new Date()).toLocaleTimeString() + ' ' + ${1:data});
